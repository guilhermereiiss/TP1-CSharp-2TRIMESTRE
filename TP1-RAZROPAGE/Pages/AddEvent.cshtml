@page
@model ProductCatalog.Pages.AddEventModel
@{
    ViewData["Title"] = "Adicionar Evento";
}

<h1>Cadastro de Evento - Questão 11</h1>

<form method="post">
    <div>
        <label for="Titulo">Título:</label><br />
        <input type="text" asp-for="NovoEvento.Titulo" required />
    </div>
    <br />
    <div>
        <label for="Data">Data:</label><br />
        <input type="date" asp-for="NovoEvento.Data" required />
    </div>
    <br />
    <div>
        <label for="Local">Local:</label><br />
        <input type="text" asp-for="NovoEvento.Local" required />
    </div>
    <br />
    <button type="submit">Cadastrar Evento</button>
</form>

@if (Model.EventoCriado)
{
    <h3>Evento cadastrado com sucesso!</h3>
    <p><strong>@Model.NovoEvento.Titulo</strong> - @Model.NovoEvento.Data.ToShortDateString() - @Model.NovoEvento.Local</p>
}

